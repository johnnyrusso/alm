<%- include ('../partials/admin_header') -%>

<div class="container mx-auto mt-5 pt-5">
    <div class="row w-100">
        <div class="col-sm-12">
            <h4 class="mx-auto w-100">
                Timesheet
                <%= employee.first_name %>
                <%= employee.last_name %>
            </h4>
        </div>
    </div>
    <table id="timesheet" class="table table-striped table-border dt-responsive nowrap" style="width:100%">
        <thead>
            <tr class="table-success">
                <td colspan="3">Week Ending: <%= timesheet[0].week_ending %></td>
            </tr>
        <% let locArr = [];  %>

            <% console.log(daysWorked) %>
          <% daysWorked.forEach(day => {%>
    
            <tr class="table-primary">
                <th> <%= day %></th>
                <th>Task</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
        <% let i = 0; %>
        <% timesheet.forEach((ts, i, arr) => { %>
            <% if(moment(ts.date_worked).format('dddd') === day) { %>

                  <tr>
                    <% if(!exists(locArr, [day, ts.location]) ) { %>
                    <% locArr.push([day, ts.location]) %>        
                    <td class="table-active" colspan="3" id="<%=day%>_<%=ts.location%>"><%= ts.location %></td>

                    <%}%>
                    
            
                </tr>
                <tr>
                    <td>
                        <% if(locations.includes(ts.location)) {%>
                        <%=ts.task_type%>
                   <%}%> 
                    </td>
                </tr>
                   <%}%>
                <% i += 1; }); %>
            
        <% }) %>
        <%console.log(locArr)%>
        <tr class="table-info">
            <td colspan="2">
                <span class="text-dark"> Total Hours:
                 
            </td>
            <td>
                <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#verify_modal">
                    Verify
                </button>
            </td>
        </tr>


        </tbody>
    </table>
    <!-- Modal -->
    <div class="modal fade" id="verify_modal" tabindex="-1" role="dialog"
         aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalScrollableTitle">Accept Timesheet</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/staff_footer') -%>

