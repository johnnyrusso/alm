<%- include ('./partials/staff_header') -%>

<body>
    <div class="container">
        <form  class="form ml-auto mt-5" action="./login" method="POST">
            <fieldset>
                <!-- Form Name -->
                <legend>Employee Login</legend>
                <%- include('./partials/messages') -%>

                <div class="jumbotron border border-dark">
                    <!-- Username input -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="email">Email</label>
                        <div class="col-md-4">
                            <input id="email" name="email" type="text" placeholder="email" class="form-control input-md" autocomplete="email" required="">
                            <small><span class="help-block">Username will be used to log into employee section</span></small>
                        </div>
                    </div>
                    <!-- password input -->
                    <div class="form-group">
                        <label class="col-md-4 control-label" for="password">Password</label>
                        <div class="col-md-4">
                            <input id="password" name="password" type="password" placeholder="password..." class="form-control input-md" autocomplete="new-password" required="">
                            <small><span class="help-block">Must contain both uppercase and lowercase letters and one or more numbers.</span></small>
                        </div>
                    </div>

                <div class="form-group">
                    <div class="col-md-4">
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </div>
                </div>
                </div>
             </fieldset>
        </form>
    </div>


<%- include ('./partials/staff_footer') -%>
